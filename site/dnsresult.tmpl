{{ define "dns_result" }}
<div hx-get='' hx-target='this' hx-swap='outerHTML' hx-trigger="every 60s">
{{if .Host}}
<h1>DNS for {{.Host}}</h1>

<h2>IP addresses</h2>

{{if .IPAddresses}}
<ol>{{range .IPAddresses}}<li>{{ . }}</li>{{ end }}</ol>
{{else}}
<p>No IP addresses found.</p>
{{end}}

<h2>Name servers</h2>

{{if .NameServers}}
<ol>{{ range .NameServers }}<li>{{ . }}</li>{{end}}</ol>
{{else}}
<p>No name servers found.</p>
{{ end }}

<p>The next update is at {{.NextReload}}.</p>
{{end}}

<form hx-replace-url="true" hx-get="/dnschecker">
<input type="text" name="host" value="{{.Host}}">
<button>Lookup</button>
</form>

</div>
{{ end }}
