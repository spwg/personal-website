{{ define "dns_result" }}
<div id="result" hx-get='' hx-target='this' hx-swap='outerHTML' hx-trigger="every 60s">
<h2>IP addresses</h2>

{{if .IPAddresses}}
<ol>{{range .IPAddresses}}<li>{{ . }}</li>{{ end }}</ol>
{{else}}
<p>No IP addresses found.</p>
{{end}}

<h2>Name servers</h2>

{{if .NameServers}}
<ol>{{ range .NameServers }}<li>{{ . }}</li>{{end}}</ol>
{{else}}
<p>No name servers found.</p>
{{ end }}

<h2>Time</h2>

<p>It is {{.CurrentTime}}.</p>
<p>The next update is at {{.NextReload}}.</p>

<button hx-get='' hx-target='#result' hx-swap='outerHTML' hx-trigger="click">
Reload now
</button>
</div>
{{ end }}
